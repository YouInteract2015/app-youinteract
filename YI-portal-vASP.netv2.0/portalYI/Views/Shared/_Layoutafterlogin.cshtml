<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Standard Meta -->
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">

    <!-- Site Properities -->
    <title>YouInteract :: Portal</title>

    <link rel="stylesheet" type="text/css" href="../Content/semantic.css">
    <link rel="stylesheet" type="text/css" href="../Content/Site.css">


    <script src="http://cdnjs.cloudflare.com/ajax/libs/jquery/2.0.3/jquery.js"></script>
    <script src="../Scripts/semantic.js"></script>
    <script src="../Scripts/Site.js"></script>

    <link rel="shortcut icon" href="~/Content/imagens/logoYI.ico" type="image/x-icon" />

</head>


<body id="home">
    

    <div class="ui inverted menu fixed">
        <a class="item" href="../Home/Index">
            <i class="home icon"></i> Home
        </a>
        <a class="item" href="../Home/About">
            <i class="idea icon"></i> About
        </a>
        <a class="item" href="../Home/Help">
            <i class="help icon"></i> Help
        </a>


        <div class="ui dropdown">
            <a class="item" href="../Login/Index">
                <i class="settings icon"></i> YouInteract configuration
                <i class="dropdown icon"></i>
            </a>

            <div class="menu">


                <div class="item">
                    Kinect&copy; <i class="chevron right icon"></i>
                    <div class="menu">
                        <a class="item" href="../Kinect/Device"> Device list </a>
                        <a class="item" href="../Kinect/Config"> Create configs  </a>
                        <a class="item" href="../Kinect/Theme"> Create themes </a>
                        <a class="item" href="../Kinect/APPs"> Upload apps </a>
                        <a class="item" href="../Kinect/Scheduler"> Create schedulers </a>
                    </div>
                </div>

                <div class="item">
                    without Kinect&copy; <i class="chevron right icon"></i>
                    <div class="menu">
                        <a class="item" href="../Generic/Device">  Device list </a>
                        <a class="item" href="../Generic/Config"> Create configs  </a>
                        <a class="item" href="../Generic/Theme">  Create themes  </a>
                        <a class="item" href="../Generic/Items">  Upload items  </a>
                        <a class="item" href="../Generic/Scheduler">  Create schedulers</a>
                    </div>
                </div>



            </div>

            </div>



            <!-- menu search+login+register -->
            <div class="right menu">
                <div class="item">
                    <div class="ui icon input">
                        <input type="text" placeholder="Search...">
                        <i class="search link icon"></i>
                    </div>

                </div>



                
                
                <a class="active item" href="">
                    <i class="user icon"></i> Welcome  
                    @if (Session["LogedUserName"] != null)
                    {
                        @Session["LogedUserName"].ToString()
                    }

                </a>
                <a class="item" href="~/">
                    <i class="sign out icon"></i> Logout
                </a>

            </div>

        </div>



    @RenderBody()

    <footer>
        <div class="ui inverted footer vertical segment">
            <div class="ui stackable center aligned page grid">
                <p>
                <p>
                    <div class="six wide column">
                <p>
                <p>
                    <div class="ui two column center aligned stackable grid">
                        <div class="column">
                            <a href="http://www.ua.pt"><img src="../Content/imagens/ua_logo.png" class="ui large image"></a>
                        </div>
                        <div class="column">
                            <a href="http://www.ua.pt/deti/"><img src="../Content/imagens/deti_logo.png" class="ui large image"></a>
                        </div>
                    </div>
                <p></p>
                <center>
                    YouInteract © 2015 | All right reserved <p></p> Project in Informatics Engineering | MIECT-UA
                </center>
            </div>
        </div>
        </div>
    </footer>


</body>
</html>
