                                               Margin="0, 0, 5, 0" Text="25 º" />
                                    <TextBlock VerticalAlignment="Center" HorizontalAlignment="Left"
                                               TextWrapping="WrapWithOverflow" Grid.Row="2" Grid.Column="2"
                                               Foreground="White" FontSize="15" FontFamily="Calibri"
