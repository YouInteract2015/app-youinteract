                                    <Image Grid.Row="2" Grid.Column="3" HorizontalAlignment="Right" Width="25"
                                           Height="25"
                                           Stretch="Uniform" Source="http://openweathermap.org/img/w/04n.png" />
                                    <TextBlock VerticalAlignment="Center" HorizontalAlignment="Left"
                                               TextWrapping="WrapWithOverflow" Grid.Row="3" Grid.Column="1"
